<div class="jumbotron">
  <h2> <b>Add Customer</b> </h2>
<%= form_for(@customer) do |f| %>

    <b><%= f.label :first_name %></b></br>
    <%= f.text_field :first_name, autofocus: true %></br></br>

    <b><%= f.label :last_name %></b></br>
    <%= f.text_field :last_name, autofocus: true %></br></br>

    <b><%= f.label :email %></b></br>
    <%= f.text_field :email, autofocus: true %></br></br>

    <b><%= f.label :code %></b></br>
    <%= f.text_field :code, autofocus: true %></br></br>

    <b><%= f.label :address_id %></b></br>
    <%= f.text_field :address_id, autofocus: true %></br></br>

    <b><a> Gender: </a></b>
    <% tableau_assoc = {"Man"=>"Man","Woman"=>"Woman"}%>
    <%= f.select :gender,tableau_assoc %></br>

    <b><a> Company : </a></b>
    <%= f.select :company_id, @companies %>
    or <i><a href = "../companies/new" >create Company</a></i>
    </br>

    <%= f.submit "Generate", class: 'btn btn-primary' %>

<% end %>
<a href=" ../bills/new"> Return to Bill's generation </a>
</div>
