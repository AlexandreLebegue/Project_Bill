<div class="jumbotron">
<h2>Edit <%= resource_name.to_s.humanize %></h2>
<!-- No need to build because company is already build -->



<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>
  
  <br />
  <Strong>User</Strong>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "off" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>



  <div class="field">
    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "off" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <br />
  <Strong>Company</Strong>

  <div class="field">
    <%= f.fields_for :company do |builder| %>
      <%= builder.label :name %><br />
      <%= builder.text_field :name %>
    <%end%>
  </div>

  <div class="field">
    <%= f.fields_for :company do |builder| %>
      <%= builder.label :siret_number %><br />
      <%= builder.text_field :siret_number %>
    <%end%>
  </div>

  <div class="field">
    <%= f.fields_for :company do |builder| %>
      <%= builder.label :phone_number %><br />
      <%= builder.text_field :phone_number %>
    <%end%>
  </div>

  <div class="field">
    <%= f.fields_for :company do |builder| %>
      <%= builder.label :address_id %><br />
      <%= builder.text_field :address_id %>
    <%end%>
  </div>

  <div class="actions"><br />
    <%= f.submit "Update", class: 'btn btn-primary' do %>
      <i class="glyphicon glyphicon-plus"></i> Update
    <%end%>
  </div>
<% end %>

</div>


<div class="jumbotron">
<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: 'btn btn-primary'  %></p>
<%= link_to "Back", :back %>
</div>
